--- a/app/static/styles.css
+++ b/app/static/styles.css
@@ -26,3 +26,44 @@
 th, td { padding:.55rem .6rem; border-bottom:1px solid var(--border); text-align:left; }
 .dropdown { margin-top:1rem; }
 .hidden { display:none; }
+
+
+/* --- UI Patch: shadcn-like cards, sticky header, responsive layout --- */
+.topbar { position: sticky; top: 0; z-index: 50; background: var(--bg); backdrop-filter: saturate(180%) blur(6px); }
+.topbar .brand { font-weight: 700; color: var(--fg); text-decoration:none; }
+.topbar .container { gap: .75rem; }
+.main-nav { display:flex; gap:.5rem; align-items:center; }
+.hamburger { display:none; font-size:1.25rem; padding:.4rem .6rem; border:1px solid var(--border); border-radius:.5rem; cursor:pointer; }
+.nav-toggle { display:none; }
+
+.card { background: #fff; border: 1px solid var(--border); border-radius: 1rem; box-shadow: 0 1px 0 rgba(0,0,0,.03), 0 1px 2px rgba(0,0,0,.04); padding: 1rem 1.25rem; margin: 1rem 0; }
+.card .hero { padding: 1rem 0; }
+
+/* Inputs and buttons refinement */
+label input, label textarea, label select { border:1px solid var(--border); border-radius:.5rem; padding:.6rem .7rem; }
+.btn { border-radius:.6rem; }
+.btn.secondary { border-color: var(--border); }
+
+/* Responsive grids */
+@media (max-width: 1024px) {
+  .grid.three { grid-template-columns: repeat(2, minmax(0,1fr)); }
+}
+@media (max-width: 820px) { /* iPad portrait and below */
+  .grid.two, .grid.three { grid-template-columns: 1fr; }
+  .container { padding: .75rem; }
+  .topbar .brand { font-size: 1rem; }
+  .hamburger { display:block; }
+  .main-nav { display:none; width:100%; flex-wrap:wrap; padding-top:.5rem; }
+  .nav-toggle:checked + .hamburger + .main-nav { display:flex; }
+  .row.space-between { flex-wrap: wrap; gap: .5rem; }
+}
+@media (max-width: 430px) { /* iPhone */
+  .btn { padding: .5rem .7rem; font-size: .95rem; }
+  table { font-size: .9rem; }
+  th, td { padding:.45rem .5rem; }
+}
+
+/* Tables and scroll on small screens */
+.table-wrap { border:1px solid var(--border); border-radius:.75rem; }
+.table-wrap::-webkit-scrollbar { height: 10px; }
+.table-wrap::-webkit-scrollbar-thumb { background: var(--border); border-radius:10px; }
